    .counselor {
        display: flex; /* Change display to flex */
        margin: 20px auto; /* Center the counselor horizontally */
        position: relative;
        width: 600px; /* Set a fixed width for the counselor */
    }

    .counselor img {
        width: 300px;
        height: auto;
        border-radius: 100%;
    }

    .details-container {
        flex: 1; /* Allow details container to expand */
        background-color: rgba(255, 255, 255, 0.9);
        transition: opacity 0.3s ease; /* Add transition for sliding effect */
        border-radius: 5px;
        padding: 20px;
        box-sizing: border-box;
        opacity: 0; /* Initially hide details */
    }

    .counselor:hover .details-container {
        opacity: 1; /* Show details on hover */
    }

    .details {
        text-align: left;
    }

    .general-details {
        font-style: italic;
        font-size: 17px;
    }

    /* Adjust margins for left and right details */
    .details.left {
        margin-right: 20px;
    }

    .details.right {
